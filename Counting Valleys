#include<bits/stdc++.h>
#define fast ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);
#define ll long long int
#define endl "\n"
using namespace std;
int main(){
    fast;ll n;cin>>n;ll a=0;ll c=0;
    string s;cin>>s;
    for(ll i=0;i<s.size();i++){
        
            if(s[i]=='U')
             {
                 a=a+1;
                // cout<<a<<" U"<<endl;
             }
           else if(s[i]=='D')
            {
                a=a-1;
                //cout<<a<<" D"<<endl;
            }
            if(a==0 and s[i]=='U')
                c++;
    }
    cout<<c<<endl;;
}
